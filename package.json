{
  "name": "discord-bot",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "src/bot.js",
  "scripts": {
    "start": "node -r esm .",
    "test": "mocha",
    "test:coverage": "nyc mocha",
    "test:tdd": "mocha --watch",
    "lint": "eslint --ignore-path .gitignore src/**/*.js",
    "lint:fix": "eslint --ignore-path .gitignore --fix"
  },
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.2",
    "ascii-table": "0.0.9",
    "cheerio": "^1.0.0-rc.3",
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "ffmpeg-static": "^4.2.2",
    "is-reachable": "^4.0.0",
    "moment": "^2.26.0",
    "node-fetch": "^2.6.0",
    "outdent": "^0.7.1",
    "ytdl-core-discord": "^1.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chance": "^1.1.5",
    "eslint": "^7.0.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^4.2.5",
    "jest-cli": "^26.0.1",
    "lint-staged": "^10.2.6",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.json": [
      "git add --force"
    ]
  }
}
